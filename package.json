{
  "name": "cypress_automation",
  "version": "1.0.0",
  "description": "Projeto de automação com Cypress e Cucumber",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --browser chrome",
    "test": "cypress run"
  },
  "cypress-cucumber-preprocessor": {
    "stepDefinitions": "cypress/e2e/step_definitions/**/*.js",
    "html": {
      "enabled": true,
      "output": "cypress/reports/cucumber-html-report.html"
    },
    "json": {
      "enabled": true,
      "output": "cypress/reports/cucumber-report.json"
    }
  },
  "devDependencies": {
    "cypress": "latest",
    "@badeball/cypress-cucumber-preprocessor": "^latest",
    "@bahmutov/cypress-esbuild-preprocessor": "^latest"
  }
}
